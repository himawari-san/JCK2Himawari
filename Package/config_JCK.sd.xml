<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<setting>
      
    <corpora dppath="Corpora/JCK" name="JCKコーパス">
        <li name="JCK" path="Corpora/JCK/corpus"/>
    </corpora>
      
    <!-- 索引関連 -->
      
    <!-- 要素内容への索引 -->
      
    <index_cix>
            
        <li field_name="キー" label="本文" middle_name="article" name="テキスト" type="normal"/>
            
        <li field_name="キー" label="本文(正規表現)" middle_name="article" name="テキスト" type="null"/>
        <li field_name="キー" label="修正後" middle_name="cr" name="cr" type="normal"/>
        <li field_name="キー" label="修正後(正規表現)" middle_name="cr" name="cr" type="null"/>
          
    </index_cix>
      
    <!-- 要素への索引 -->
      
    <index_eix>
            
        <li is_empty="false" middle_name="corpus" name="コーパス" top="true"/>
            
        <li isBrowsed="true" is_empty="false" middle_name="article" name="記事"/>
            
        <li is_empty="false" middle_name="r" name="r"/>
        <li is_empty="false" middle_name="cr" name="cr"/>
          
    </index_eix>
      
    <!-- 要素属性への索引 -->
      
    <index_aix>
        <li argument="org" field_name="キー" isCompleteMatch="tru" label="修正前(完全一致)" middle_name="r2" name="cr"/>
        <li argument="org" field_name="キー" isCompleteMatch="false" label="修正前(部分一致)" middle_name="r2" name="cr"/>
        <li argument="_TEXT" field_name="キー" isCompleteMatch="false" label="出現形" middle_name="dummy" name="morph" type="dic"/>
        <li argument="品詞" field_name="キー" isCompleteMatch="false" label="品詞" middle_name="dummy" name="morph" type="dic"/>
        <li argument="活用型" field_name="キー" isCompleteMatch="false" label="活用型" middle_name="dummy" name="morph" type="dic"/>
        <li argument="活用形" field_name="キー" isCompleteMatch="false" label="活用形" middle_name="dummy" name="morph" type="dic"/>
        <li argument="基本形" field_name="キー" isCompleteMatch="false" label="基本形" middle_name="dummy" name="morph" type="dic"/>
        <li argument="読み" field_name="キー" isCompleteMatch="false" label="読み" middle_name="dummy" name="morph" type="dic"/>
    </index_aix>
    
    <!-- 検索関連オプション -->
      
    <!-- KWIC の文脈長 -->
      
    <length_context_kwic value="10"/>
      
    <!-- 検索時の文脈マッチング範囲 -->
      
    <length_context_search value="10"/>
      
    <!-- 結果レコードのフィールド定義 -->
      
    <field_setting>
            
        <li align="RIGHT" name="no" type="index" width="30"/>
            
        <li align="RIGHT" attribute="_preceding_context" element="_sys" name="前文脈" sort_direction="R" type="preceding_context" width="180"/>
            
        <li attribute="_key" element="_sys" name="キー" sort_order="1" type="key" width="80"/>
            
        <li attribute="_following_context" element="_sys" name="後文脈" sort_order="2" type="following_context" width="160"/>
            
        <li attribute="path" element="記事" name="Path" type="argument" width="80"/>
            
        <li attribute="タイトル" element="記事" name="タイトル" type="argument" width="80"/>
            
        <li attribute="org" element="cr" name="修正前" type="argument" width="80"/>
        <li attribute="品詞" element="morph" name="品詞" type="dic" width="80"/>
        <li attribute="品詞細分類１" element="morph" name="品詞細分類１" type="dic" width="80"/>
        <li attribute="品詞細分類２" element="morph" name="品詞細分類２" type="dic" width="80"/>
        <li attribute="品詞細分類３" element="morph" name="品詞細分類３" type="dic" width="80"/>
        <li attribute="活用型" element="morph" name="活用型" type="dic" width="80"/>
        <li attribute="活用形" element="morph" name="活用形" type="dic" width="80"/>
        <li attribute="基本形" element="morph" name="基本形" type="dic" width="80"/>
        <li attribute="読み" element="morph" name="読み" type="dic" width="80"/>
        <li attribute="発音" element="morph" name="発音" type="dic" width="80"/>
        <li attribute="基本形" element="morph[-2]" name="基本形-2" type="dic" width="80"/>
        <li attribute="基本形" element="morph[-1]" name="基本形-1" type="dic" width="80"/>
        <li attribute="基本形" element="morph[1]" name="基本形1" type="dic" width="80"/>
        <li attribute="基本形" element="morph[2]" name="基本形2" type="dic" width="80"/>
    </field_setting>
    
    <!--     コーパスフィールド -->
      
    <corpus_fields name="コーパス">
            
        <li attribute="名前" element="コーパス" name="コーパス名" width="120"/>
          
    </corpus_fields>
    
    <!-- 閲覧要素一覧用フィールド -->
    
    <unit_fields name="タイトル，著者">
         
        <li attribute="タイトル" element="記事" name="タイトル" width="120"/>
         
        <li attribute="サブタイトル" element="記事" name="サブタイトル" width="120"/>
         
        <li attribute="著者" element="記事" name="著者" width="120"/>
         
        <li attribute="path" element="記事" name="Path" width="120"/>
        
    </unit_fields>
    
    <!-- 統計表用フィールド -->
      
    <stat_fields_1 label="キー，タイトル，著者">
            
        <li name="キー" width="100"/>
            
        <li align="LEFT" name="タイトル" width="150"/>
            
        <li align="LEFT" name="著者" width="150"/>
            
        <li align="RIGHT" name="頻度" sort_type="numeric" width="80"/>
          
    </stat_fields_1>
      
    <stat_fields_2 label="基本形，タイトル，著者">
            
        <li align="RIGHT" name="基本形" width="100"/>
            
        <li align="LEFT" name="タイトル" width="150"/>
            
        <li align="LEFT" name="著者" width="150"/>
            
        <li align="RIGHT" name="頻度" sort_type="numeric" width="80"/>
          
    </stat_fields_2>
      
    <stat_fields_3 label="キー">
            
        <li name="キー" width="100"/>
            
        <li align="RIGHT" name="頻度" sort_type="numeric" width="80"/>
          
    </stat_fields_3>
    
    <!-- 閲覧表示関連オプション -->
      
    <!-- 表示用 XSL -->
      
    <xsl_files root_path="Corpora/JCK/xslt">
            
        <li label="default" name="jck.xsl"/>
          
    </xsl_files>
    
    <!-- 字体辞書の URL -->
    
    <jitaidic url="Corpora/jitaidic.xml"/>
      
    <!-- フォントサイズ -->
      
    <fontsize value="14"/>
      
    <!-- indexing 用のメニュー項目を表示するか否か -->
      
    <isIndexingEnable value="true"/>
      
    <!-- 外部アノテータの設定 ver.1.6から .himawari_annotator_config.xml に移行 -->
      
    <!-- インポート時の設定 ver.1.6から .himawari_import_config.xml に移行 -->
    
</setting>
